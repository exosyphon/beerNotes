        <label>Name: </label>
        <input type="text" value="{{name}}" id="name" style="width: 100px; display: inline-block;"></input>
    </span>
    <span style="width: 250px; display: inline-block;">
        <label>Type: </label>
        <input type="text" value="{{beerType}}" id="beerType" style="width: 100px;"></input>
    </span>
    <span style="width: 250px; display: inline-block;">
        <label>Notes: </label>
        <input type="text" value="{{notes}}" id="notes" style="width: 100px;"></input>
    </span>
</fieldset>